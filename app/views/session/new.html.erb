<% provide(:title, "Login") %>
<div class="container">
  <%= form_for(:account, url: login_path,:html => {:class => "form-signin"}) do |f|%>
  <h2 class="form-signin-heading"><%= t "session.login" %></h2>
  <%= f.label :email, class: "sr-only" %>
  <%= f.email_field :email, class: "form-control", placeholder: "Email address" %>
  <%= f.label :password, class: "sr-only" %>
  <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  <div class="checkbox">
    <label>
      <input type="checkbox" value="remember-me"><%= t "session.remember" %>
    </label>
  </div>
  <%= f.submit t("session.btn"), class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
</div>
